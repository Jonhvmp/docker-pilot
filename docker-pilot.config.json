{
  "projectName": "docker-pilot",
  "dockerCompose": "docker compose",
  "configVersion": "1.0",
  "services": {
    "database": {
      "description": "Auto-detected database service",
      "healthCheck": true,
      "backupEnabled": true,
      "detected": true,
      "port": null,
      "volumes": [
        "postgres_data_dev:/var/lib/postgresql/data"
      ],
      "environment": {
        "POSTGRES_DB": "${DB_NAME:-uvalar_dev}",
        "POSTGRES_USER": "${DB_USER:-postgres}",
        "POSTGRES_PASSWORD": "${DB_PASSWORD:-postgres123}",
        "PGDATA": "/var/lib/postgresql/data/pgdata"
      }
    },
    "backend": {
      "description": "Auto-detected backend service",
      "healthCheck": true,
      "backupEnabled": false,
      "detected": true,
      "port": null,
      "volumes": [
        "../../backend/src:/app/src:ro",
        "../../backend/prisma:/app/prisma:ro",
        "../../backend/package.json:/app/package.json:ro",
        "../../backend/tsconfig.json:/app/tsconfig.json:ro",
        "backend_node_modules_dev:/app/node_modules"
      ],
      "environment": {
        "NODE_ENV": "development",
        "PORT": "3000",
        "DATABASE_URL": "postgresql://${DB_USER:-postgres}:${DB_PASSWORD:-postgres123}@database:5432/${DB_NAME:-uvalar_dev}",
        "JWT_SECRET": "${JWT_SECRET:-dev_jwt_secret_change_in_production}",
        "JWT_EXPIRES_IN": "${JWT_EXPIRES_IN:-24h}"
      }
    },
    "frontend": {
      "description": "Auto-detected frontend service",
      "healthCheck": true,
      "backupEnabled": false,
      "detected": true,
      "port": null,
      "volumes": [
        "../../frontend:/app:cached",
        "frontend_node_modules_dev:/app/node_modules",
        "/app/.next"
      ],
      "environment": {
        "NODE_ENV": "development",
        "PORT": "3000",
        "NEXT_PUBLIC_API_URL": "${NEXT_PUBLIC_API_URL:-http://localhost:5000/api}",
        "WATCHPACK_POLLING": "true"
      }
    },
    "adminer": {
      "description": "Auto-detected adminer service",
      "healthCheck": false,
      "backupEnabled": false,
      "detected": true,
      "port": null,
      "environment": {
        "ADMINER_DEFAULT_SERVER": "database"
      }
    }
  },
  "plugins": [],
  "cli": {
    "version": "1.0.0",
    "welcomeMessage": "Bem-vindo ao {projectName} Docker Pilot v{version}! üê≥",
    "goodbyeMessage": "Obrigado por usar o {projectName} Docker Pilot!",
    "interactiveMode": true,
    "colorOutput": true,
    "verboseLogging": false,
    "confirmDestructiveActions": true
  },
  "backup": {
    "enabled": false,
    "directory": "./backups",
    "retention": 7,
    "services": {}
  },
  "monitoring": {
    "enabled": true,
    "refreshInterval": 5,
    "services": [
      "app"
    ],
    "urls": {},
    "alerts": {
      "enabled": false,
      "thresholds": {
        "cpu": 80,
        "memory": 80,
        "disk": 90
      }
    }
  },
  "development": {
    "hotReload": true,
    "debugMode": false,
    "logLevel": "info",
    "autoMigrate": false,
    "seedData": false,
    "testMode": false,
    "watchFiles": [],
    "environment": "development"
  },
  "networks": {},
  "volumes": {},
  "language": "en",
  "primaryComposeFile": "C:\\Users\\plugify\\Documents\\GitHub\\docker-pilot\\docker\\docker-compose\\docker-compose.dev.yml"
}
