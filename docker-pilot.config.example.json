{
  "projectName": "Docker Pilot Example",
  "dockerCompose": "docker compose",
  "configVersion": "1.0",
  "services": {
    "app": {
      "port": 3000,
      "path": "./",
      "description": "Main application service",
      "healthCheck": true,
      "backupEnabled": false,
      "restart": "unless-stopped",
      "scale": 1
    },
    "postgres": {
      "port": 5432,
      "path": null,
      "description": "PostgreSQL database server",
      "healthCheck": true,
      "backupEnabled": true,
      "restart": "unless-stopped",
      "scale": 1
    },
    "redis": {
      "port": 6379,
      "path": null,
      "description": "Redis cache server",
      "healthCheck": true,
      "backupEnabled": true,
      "restart": "unless-stopped",
      "scale": 1
    }
  },
  "plugins": [],
  "cli": {
    "version": "1.0.0",
    "welcomeMessage": "Bem-vindo ao {projectName} Docker Pilot v{version}! üê≥",
    "goodbyeMessage": "Obrigado por usar o {projectName} Docker Pilot!",
    "interactiveMode": true,
    "colorOutput": true,
    "verboseLogging": false,
    "confirmDestructiveActions": true
  },
  "backup": {
    "enabled": true,
    "directory": "./backups",
    "retention": 7,
    "services": {
      "postgres": {
        "command": "pg_dump",
        "filename": "postgres_backup_{timestamp}.sql",
        "compression": true
      },
      "redis": {
        "command": "redis-cli BGSAVE",
        "filename": "redis_dump_{timestamp}.rdb",
        "compression": false
      }
    }
  },
  "monitoring": {
    "enabled": true,
    "refreshInterval": 5,
    "services": ["app", "postgres", "redis"],
    "urls": {
      "app": "http://localhost:3000/health",
      "postgres": "postgres://localhost:5432"
    },
    "alerts": {
      "enabled": false,
      "thresholds": {
        "cpu": 80,
        "memory": 80,
        "disk": 90
      }
    }
  },
  "development": {
    "hotReload": true,
    "debugMode": false,
    "logLevel": "info",
    "autoMigrate": false,
    "seedData": false,
    "testMode": false,
    "watchFiles": [],
    "environment": "development"
  },
  "networks": {},
  "volumes": {}
}
